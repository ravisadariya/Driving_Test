<!DOCTYPE html>
<html lang="en">

<%- include("layouts/header") %>

    <body>

        <!-- Navbar Start -->
        <%- include("layouts/navbar") %>
            <!-- Navbar End -->

            <!-- login page start-->
            <section class="page-section mt-3 m-5 p-5" id="signup">
                <div class="container">
                    <div class="text-center">
                        <h2 class="section-heading text-uppercase">Account Sign Up</h2>
                        <h3 class="section-subheading text-muted">Already have an account?<a href="login" class="nav-item nav-link">Login</a></h3>
                    </div>
                    <div class="row text-center">
                        <form action="/signup" method="post">
                            <div class="row mb-3 form-group">
                                <label for="signupUsername" class="col-sm-2 col-form-label text-dark fw-bold">Username:</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="username" id="signupUsername" placeholder="Enter Username" />
                                </div>
                            </div>
                            <div class="row mb-3 form-group">
                                <label for="signupPassword" class="col-sm-2 col-form-label text-dark fw-bold">Password:</label>
                                <div class="col-sm-10">
                                    <input type="password" class="form-control" name="password" id="signupPassword" placeholder="Enter Password" />
                                </div>
                            </div>
                            <div class="row mb-3 form-group">
                                <label for="confirmPassword" class="col-sm-2 col-form-label text-dark fw-bold">Confirm Password:</label>
                                <div class="col-sm-10">
                                    <input type="password" class="form-control" name="confirmPassword" id="confirmPassword" placeholder="Confirm Password" />
                                </div>
                            </div>
                            <div class="row mb-3 form-group">
                                <label for="userType" class="col-sm-2 col-form-label text-dark fw-bold">User Type:</label>
                                <div class="col-sm-10">
                                    <select class="form-select" id="userType" name="userType">
                                        <% for(let user of Object.values(userTypes)){%>
                                            <option value="<%= user.id %>"><%= user.display %></option>
                                        <% }%>
                                    </select>
                                </div>
                            </div>
                            
                            <div class="row mb-3 form-group">
                                <div class="">
                                    <button type="submit" class="btn btn-primary text-dark">Sign Up</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </section>
            
            <!-- login page end-->


            <!-- Footer Start -->
            <%- include("layouts/footer") %>
                <!-- Footer End -->

                <!-- JavaScript Libraries -->
                <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
                <script src="lib/wow/wow.min.js"></script>
                <script src="lib/easing/easing.min.js"></script>
                <script src="lib/waypoints/waypoints.min.js"></script>
                <script src="lib/owlcarousel/owl.carousel.min.js"></script>

                <!-- Template Javascript -->
                <script src="js/main.js"></script>
    </body>

</html>